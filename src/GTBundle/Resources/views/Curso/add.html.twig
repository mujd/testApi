{% extends 'layoutWindow.html.twig' %}

{% block modal %}
    {{ form_start(form) }}
    <div class="form-group">
    {{ form_label(form.codigo) }}
    {{ form_widget(form.codigo, {'attr' : {'placeholder' : 'Codigo', 'class': 'form-control'}}) }}
    <span >{{ form_errors(form.codigo) }}</span>
    </div>
    <div class="form-group">
    {{ form_label(form.nombre) }}
    {{ form_widget(form.nombre, {'attr' : {'placeholder' : 'Nombre', 'class': 'form-control'}}) }}
    <span >{{ form_errors(form.nombre) }}</span>
    </div>
    <div class="form-group">
    {{ form_label(form.objetivo) }}
    {{ form_widget(form.objetivo, {'attr' : {'placeholder' : 'Objetivo', 'class': 'form-control'}}) }}
    <span >{{ form_errors(form.objetivo) }}</span>
    </div>
    <div class="form-group">
    {{ form_label(form.horas) }}
    {{ form_widget(form.horas, {'attr' : {'placeholder' : 'Horas', 'class': 'form-control'}}) }}
    <span >{{ form_errors(form.horas) }}</span>
    </div>
    <div class="form-group">
    {{ form_label(form.cantidadParticipantes) }}
    {{ form_widget(form.cantidadParticipantes, {'attr' : {'placeholder' : 'Cantidad de participantes', 'class': 'form-control'}}) }}
    <span >{{ form_errors(form.cantidadParticipantes) }}</span>
    </div>
    <br>
    <div class="row">
        <div class="col-md-12 text-right">  
            {{ form_widget(form.save, {'label' : 'Guardar', 'attr' : {  'class': 'form-control', 'class': 'btn btn-info'}}) }}
            <button type="button" class="btn btn-sm btn-default" data-dismiss="modal" onclick="parent.cerrarCurso()">Cerrar</button>
        </div>
    </div>

    {{ form_end(form) }}

{% endblock %}