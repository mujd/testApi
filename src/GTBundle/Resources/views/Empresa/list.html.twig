{% extends '::base.html.twig' %}
{% block pageHeader %}Empresa{% endblock %}
{% block body %}
    <div class="box">
        <div class="box-header">
            <h3 class="box-title"><strong>Listado de Empresas</strong></h3>
            <br><br>
            <a  onclick="registrarEmpresa()" class="btn btn-info" role="button">Agregar Empresa</a><br><br>
        </div>
        <!-- /.box-header -->
        <div class="box-body table-responsive">
            <table id="example" class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Rut</th>
                        <th>Giro</th>
                        <th>Razon Social</th>
                        <th>Direcci√≥n</th>
                        <th>Comuna</th>
                        <th>Telefono</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for empresa in empresas %}
                        <tr>
                            <td>{{ empresa.id }}</td>
                            <td>{{ empresa.rut }}</td>
                            <td>{{ empresa.giro }}</td>
                            <td>{{ empresa.razon_social }}</td>
                            <td>{{ empresa.direccion }}</td>
                            <td>{{ empresa.comuna }}</td>
                            <td>{{ empresa.telefono }}</td>
                            <td>                                
                                <a class="" title="Edita esta empresa" href="#"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                                <a class="" title="Elimina esta empresa" href="{{ path('empresa_delete', {id: empresa.id}) }}"><span class="glyphicon glyphicon-trash edel" aria-hidden="true"></span></a>                            
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
{% endblock %}