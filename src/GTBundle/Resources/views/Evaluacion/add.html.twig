{% extends 'layoutWindow.html.twig' %}

{% block modal %}
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.codigo) }}
        {{ form_widget(form.codigo, {'attr' : {'placeholder' : 'Codigo', 'class': 'form-control'}}) }}
        <span >{{ form_errors(form.codigo) }}</span>
    </div>
    <div class="form-group">
        {{ form_label(form.nombre) }}
        {{ form_widget(form.nombre, {'attr' : {'placeholder' : 'Nombre', 'class': 'form-control'}}) }}
        <span >{{ form_errors(form.nombre) }}</span>
    </div>
    <div class="form-group">
        {{ form_label(form.fechaInicio) }}
        {{ form_widget(form.fechaInicio, {'attr' : {'placeholder' : 'Fecha Inicio', 'class': 'form-control'}}) }}
        <span >{{ form_errors(form.fechaInicio) }}</span>
    </div>
    <div class="form-group">
        {{ form_label(form.fechaTermino) }}
        {{ form_widget(form.fechaTermino, {'attr' : {'class': 'form-control'}}) }}
        <span >{{ form_errors(form.fechaTermino) }}</span>
    </div>
    <div class="form-group">
        {{ form_label(form.observacion) }}
        {{ form_widget(form.observacion, {'attr' : {'class': 'form-control'}}) }}
        <span >{{ form_errors(form.observacion) }}</span>
    </div>
    <div class="form-group">
        {{ form_label(form.persona) }}
        {{ form_widget(form.persona, {'attr' : {'class': 'form-control'}}) }}
        <span >{{ form_errors(form.persona) }}</span>
    </div>    
    <br>
    <div class="row">
        <div class="col-md-12 text-right">  
            {{ form_widget(form.save, {'label' : 'Guardar', 'attr' : {  'class': 'form-control', 'class': 'btn btn-info'}}) }}
            <button type="button" class="btn btn-sm btn-default" data-dismiss="modal" onclick="parent.cerrarEvaluacion()">Cerrar</button>
        </div>
    </div>

    {{ form_end(form) }}

{% endblock %}