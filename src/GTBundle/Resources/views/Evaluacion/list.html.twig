{% extends '::base.html.twig' %}
{% block pageHeader %}Evaluación{% endblock %}
{% block body %}
    <div class="box">
        <div class="box-header">
            <h3 class="box-title"><strong>Listado de Evaluaciones</strong></h3>
            <br><br>
            <a  onclick="registrarEvaluacion()" class="btn btn-info" role="button">Agregar Evaluación</a><br><br>
        </div>
        <!-- /.box-header -->
        <div class="box-body table-responsive">
            <table id="example" class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>codigo</th>
                        <th>Nombre</th>
                        <th>Fecha Inicio</th>
                        <th>Fecha Termino</th>
                        <th>Observacion</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for evaluacion in evaluaciones %}
                        <tr>
                            <td>{{ evaluacion.id }}</td>
                            <td>{{ evaluacion.codigo }}</td>
                            <td>{{ evaluacion.nombre }}</td>
                            <td>{{ evaluacion.fecha_inicio }}</td>
                            <td>{{ evaluacion.fecha_termino }}</td>
                            <td>{{ evaluacion.observacion }}</td>
                            <td>                                
                                <a class="" title="Edita esta evaluacion" href="#"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                                <a class="" title="Elimina esta evaluacion" href="#"><span class="glyphicon glyphicon-trash edel" aria-hidden="true"></span></a>                            
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
{% endblock %}