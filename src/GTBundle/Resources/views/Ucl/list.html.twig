{% extends '::base.html.twig' %}
{% block pageHeader %}UCL{% endblock %}
{% block body %}
    <div class="box">
        <div class="box-header">
            <h3 class="box-title"><strong>Listado de Ucl's</strong></h3>
            <br><br>
            <a  onclick="registrarUcl()" class="btn btn-info" role="button">Agregar Ucl</a><br><br>
        </div>
        <!-- /.box-header -->
        <div class="box-body table-responsive">
            <table id="example" class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Definicion</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for ucl in ucls %}
                        <tr>
                            <td>{{ ucl.id }}</td>
                            <td>{{ ucl.nombre }}</td>
                            <td>{{ ucl.definicion }}</td>
                            <td>                                
                                <a class="" title="Edita esta ucl" href="#"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                                <a class="" title="Elimina esta ucl" href="{{ path('ucl_delete', {id: ucl.id}) }}"><span class="glyphicon glyphicon-trash edel" aria-hidden="true"></span></a>                            
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
{% endblock %}