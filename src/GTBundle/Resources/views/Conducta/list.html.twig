{% extends '::base.html.twig' %}
{% block pageHeader %}Conductas{% endblock %}
{% block body %}
    <div class="box">
        <div class="box-header">
            <h3 class="box-title"><strong>Listado de Conductas</strong></h3>
            <br><br>
            <a  onclick="registrarConducta()" class="btn btn-info" role="button">Agregar Conducta</a><br><br>
        </div>
        <!-- /.box-header -->
        <div class="box-body table-responsive">
            <table id="example" class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Definicion</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for conducta in conductas %}
                        <tr>
                            <td>{{ conducta.id }}</td>
                            <td>{{ conducta.nombre }}</td>
                            <td>{{ conducta.definicion }}</td>
                            <td>                                
                                <a class="" title="Edita esta conducta" href="{{ path('conducta_update', {id: conducta.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                                <a class="" title="Elimina esta conducta" href="{{ path('conducta_delete', {id: conducta.id}) }}"><span class="glyphicon glyphicon-trash edel" aria-hidden="true"></span></a>                            
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
{% endblock %}