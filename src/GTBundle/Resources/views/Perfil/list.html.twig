{% extends '::base.html.twig' %}
{% block pageHeader %}Perfil{% endblock %}
{% block body %}
    <div class="box">
        <div class="box-header">
            <h3 class="box-title"><strong>Listado de Perfiles</strong></h3>
            <br><br>
            <a  onclick="registrarPerfil()" class="btn btn-info" role="button">Agregar Perfil</a><br><br>
        </div>

        <!-- /.box-header -->
        <div class="box-body table-responsive">
            <table id="example" class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Objetivo</th>
                        <th>Reporta</th>
                        <th>Tareas</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for perfil in perfiles %}
                        <tr>
                            <td>{{ perfil.id }}</td>
                            <td>{{ perfil.nombre }}</td>
                            <td>{{ perfil.objetivo }}</td>
                            <td>{{ perfil.reporta }}</td>
                            <td>{{ perfil.tareas }}</td>
                            <td>                                
                                <a class="" title="Edita este perfil" href="#"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                                <a class="" title="Elimina este perfil" href="#"><span class="glyphicon glyphicon-trash edel" aria-hidden="true"></span></a>                            
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>



{% endblock %}
